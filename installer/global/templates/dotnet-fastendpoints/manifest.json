{
  "name": "dotnet-fastendpoints",
  "version": "1.0.0",
  "description": ".NET template with FastEndpoints, REPR pattern, and ErrorOr functional error handling",
  "template_type": "technology-stack",
  "technology": "dotnet-fastendpoints",
  "architecture": {
    "patterns": [
      "Vertical Slice Architecture",
      "REPR Pattern (Request-Endpoint-Response)",
      "ErrorOr Pattern (functional error handling)",
      "Repository Pattern",
      "Service Pattern",
      "Dependency Injection"
    ],
    "layers": [
      {
        "name": "Endpoints",
        "description": "FastEndpoints with request/response DTOs",
        "patterns": ["REPR Pattern", "Vertical Slices"]
      },
      {
        "name": "Domain",
        "description": "Domain operations and business logic",
        "patterns": ["Domain Model", "ErrorOr Pattern"]
      },
      {
        "name": "Repository",
        "description": "Data access layer",
        "patterns": ["Repository Pattern"]
      },
      {
        "name": "Services",
        "description": "External integrations",
        "patterns": ["Service Pattern"]
      }
    ]
  },
  "testing": {
    "framework": "xUnit",
    "mocking": "NSubstitute",
    "assertions": "FluentAssertions",
    "coverage_target": {
      "line": 80,
      "branch": 75
    }
  },
  "quality_gates": {
    "required": [
      "All tests passing",
      "ErrorOr used for fallible operations",
      "FastEndpoints properly configured",
      "Request/response validation"
    ]
  },
  "prerequisites": {
    "sdk": ".NET 8.0+",
    "packages": [
      "FastEndpoints",
      "ErrorOr (2.0+)",
      "Entity Framework Core (optional)",
      "xUnit",
      "NSubstitute",
      "FluentAssertions"
    ]
  },
  "agents": [],
  "created": "2024-01-01",
  "last_updated": "2025-11-08",
  "author": "Taskwright System"
}
