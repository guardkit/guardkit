{
  "schema_version": "1.0.0",
  "naming_conventions": {
    "module": {
      "pattern": "{{name}}",
      "case_style": "snake_case",
      "suffix": ".py",
      "examples": ["orchestrator", "config", "utils"],
      "description": "Module/package names use snake_case"
    },
    "class": {
      "pattern": "{{Name}}",
      "case_style": "PascalCase",
      "suffix": ".py",
      "examples": ["Orchestrator", "CommandRunner", "AgentFactory"],
      "description": "Class names use PascalCase"
    },
    "function": {
      "pattern": "{{name}}",
      "case_style": "snake_case",
      "examples": ["run_command", "load_config", "execute_workflow"],
      "description": "Function names use snake_case"
    },
    "agent": {
      "pattern": "{{name}}-agent",
      "case_style": "kebab-case",
      "suffix": ".md",
      "examples": ["code-analyzer-agent", "test-runner-agent", "template-generator-agent"],
      "description": "Agent definition files use kebab-case with -agent suffix"
    },
    "command": {
      "pattern": "{{name}}-command",
      "case_style": "kebab-case",
      "suffix": ".md",
      "examples": ["analyze-command", "run-tests-command", "generate-command"],
      "description": "Command definition files use kebab-case"
    },
    "model": {
      "pattern": "{{Name}}",
      "case_style": "PascalCase",
      "suffix": ".py",
      "examples": ["TaskConfig", "CommandResult", "WorkflowState"],
      "description": "Pydantic models use PascalCase"
    },
    "cli_command": {
      "pattern": "{{command-name}}",
      "case_style": "kebab-case",
      "examples": ["analyze-code", "run-workflow", "validate-config"],
      "description": "CLI command names use kebab-case"
    },
    "test_file": {
      "pattern": "test_{{feature}}.py",
      "case_style": "snake_case",
      "prefix": "test_",
      "examples": ["test_orchestrator.py", "test_commands.py", "test_agents.py"],
      "description": "Test files use test_ prefix"
    },
    "test_function": {
      "pattern": "test_{{action}}_{{component}}",
      "case_style": "snake_case",
      "prefix": "test_",
      "examples": ["test_run_orchestrator", "test_load_command", "test_execute_agent"],
      "description": "Test functions describe the action being tested"
    }
  },
  "file_organization": {
    "by_layer": true,
    "by_feature": false,
    "structure": "Layered with Orchestrator",
    "test_location": "separate",
    "max_files_per_directory": 15,
    "description": "Organize by architectural layer: CLI -> Orchestrator -> Agents -> Core Logic"
  },
  "layer_mappings": {
    "cli": {
      "directory": "{{project_name}}/cli",
      "description": "Command-line interface entry points",
      "file_patterns": ["main.py", "commands.py"],
      "responsibilities": ["CLI parsing", "User interaction", "Command dispatch"]
    },
    "orchestrator": {
      "directory": "{{project_name}}/orchestrator",
      "description": "Central workflow coordination",
      "file_patterns": ["orchestrator.py", "workflow.py"],
      "responsibilities": ["Workflow coordination", "Agent orchestration", "State management"]
    },
    "agents": {
      "directory": "{{project_name}}/agents",
      "description": "Specialized agents for specific tasks",
      "file_patterns": ["*_agent.py", "base_agent.py"],
      "responsibilities": ["Specialized task execution", "Domain logic", "AI integration"]
    },
    "commands": {
      "directory": ".claude/commands",
      "description": "Markdown command definitions",
      "file_patterns": ["*.md"],
      "responsibilities": ["Command specifications", "Usage documentation", "AI prompts"]
    },
    "models": {
      "directory": "{{project_name}}/models",
      "description": "Pydantic data models",
      "file_patterns": ["*.py"],
      "responsibilities": ["Data validation", "Type safety", "Configuration models"]
    },
    "config": {
      "directory": "{{project_name}}/config",
      "description": "Configuration management",
      "file_patterns": ["config.py", "settings.py"],
      "responsibilities": ["Settings loading", "Environment variables", "Validation"]
    },
    "utils": {
      "directory": "{{project_name}}/utils",
      "description": "Utility functions and helpers",
      "file_patterns": ["*.py"],
      "responsibilities": ["File operations", "String manipulation", "Common helpers"]
    },
    "tests": {
      "directory": "tests",
      "description": "Test suite organized by component",
      "file_patterns": ["test_*.py", "conftest.py"],
      "responsibilities": ["Unit tests", "Integration tests", "Fixtures"]
    }
  },
  "code_style": {
    "indentation": "spaces",
    "indent_size": 4,
    "line_length": 120,
    "trailing_commas": true,
    "quote_style": "double",
    "async_preferred": false,
    "type_hints": "required",
    "docstrings": "google_style",
    "linter": "ruff",
    "formatter": "ruff",
    "description": "Follow PEP 8 with type hints and Google-style docstrings"
  },
  "dependencies": {
    "package_manager": "pip",
    "requirements_structure": "single",
    "requirements_files": {
      "requirements.txt": "All dependencies in single file for simplicity"
    },
    "virtual_env": "required",
    "python_version": ">=3.9",
    "core_dependencies": [
      "pydantic>=2.0.0",
      "jinja2>=3.1.0",
      "pyyaml>=6.0",
      "python-frontmatter>=1.0.0",
      "pathspec>=0.11.0"
    ]
  },
  "cli_framework": {
    "framework": "argparse",
    "alternatives": ["click", "typer"],
    "subcommands": "supported",
    "command_structure": "verb-noun",
    "help_generation": "automatic",
    "description": "Use argparse for simple CLI, consider Click/Typer for complex tools"
  },
  "orchestrator_pattern": {
    "type": "central_orchestrator",
    "dependency_injection": true,
    "agent_discovery": "dynamic",
    "workflow_definition": "code_based",
    "state_management": "in_memory",
    "description": "Central orchestrator coordinates specialized agents via dependency injection"
  },
  "agent_system": {
    "agent_definition": "markdown",
    "agent_discovery": "file_based",
    "agent_execution": "delegated",
    "agent_communication": "return_values",
    "description": "Agents defined in markdown, discovered dynamically, executed via delegation"
  },
  "testing": {
    "framework": "pytest",
    "async_support": "not_required",
    "coverage_minimum": 80,
    "test_structure": "mirror_src",
    "fixtures_location": "conftest.py",
    "mocking": "unittest.mock"
  },
  "markdown_commands": {
    "location": ".claude/commands",
    "format": "frontmatter_markdown",
    "frontmatter_fields": ["name", "description", "usage", "examples"],
    "command_registration": "file_based",
    "description": "Commands defined as markdown files with frontmatter for metadata"
  },
  "template_generation": {
    "template_engine": "jinja2",
    "template_location": "templates",
    "placeholder_style": "{{variable}}",
    "generation_approach": "file_based",
    "description": "Use Jinja2 for template generation with {{placeholder}} syntax"
  }
}
