{
  "name": "fullstack",
  "version": "1.0.0",
  "description": "Full-stack template with React (TypeScript) frontend and Python (FastAPI) backend",
  "template_type": "technology-stack",
  "technology": "fullstack",
  "architecture": {
    "frontend": "React + TypeScript + Vite + Tailwind",
    "backend": "Python + FastAPI + SQLAlchemy",
    "patterns": [
      "API-First Design (OpenAPI schemas first)",
      "Type Safety (shared TypeScript types)",
      "Repository Pattern (backend data access)",
      "React Query (frontend server state)",
      "Zustand (frontend client state)"
    ]
  },
  "agents": [
    "architectural-reviewer.md",
    "fullstack-architect.md"
  ],
  "references_agents_from": {
    "react": [
      "react-state-specialist.md",
      "react-testing-specialist.md"
    ],
    "python": [
      "python-api-specialist.md",
      "python-langchain-specialist.md",
      "python-mcp-specialist.md",
      "python-testing-specialist.md"
    ]
  },
  "testing": {
    "frontend": {
      "unit": "Vitest",
      "e2e": "Playwright",
      "coverage_target": {
        "line": 90,
        "branch": 75
      }
    },
    "backend": {
      "framework": "pytest",
      "coverage_target": {
        "line": 95,
        "branch": 80
      }
    }
  },
  "quality_gates": {
    "frontend": [
      "90% test coverage",
      "No TypeScript errors",
      "All Playwright tests pass"
    ],
    "backend": [
      "95% test coverage",
      "All pytest tests pass",
      "Type hints required"
    ],
    "integration": [
      "All API contracts validated",
      "Critical user journeys tested"
    ]
  },
  "prerequisites": {
    "frontend": {
      "node": "18+",
      "packages": ["React 18", "TypeScript 5", "Vite", "Tailwind CSS"]
    },
    "backend": {
      "python": "3.10+",
      "packages": ["FastAPI", "SQLAlchemy", "Alembic", "pytest", "Pydantic"]
    }
  },
  "created": "2025-11-04",
  "last_updated": "2025-11-04",
  "author": "Taskwright System"
}
